# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ACCOUNT_ID=123456789012

# DynamoDB Tables (will be set by SAM template)
MENUS_TABLE=bell-menus-dev
ORDERS_TABLE=bell-orders-dev
USERS_TABLE=bell-users-dev
POS_JOBS_TABLE=bell-pos-jobs-dev

# Business Rules Configuration
AUTO_COMPLETE_MINUTES=30
CART_TTL_MINUTES=10
REFUND_CAP_PERCENT=5
ALLOWED_PAYMENT_METHODS=naverpay,kakaopay
POS_PRINTER_COUNT=1

# Payment Configuration - NaverPay
NAVERPAY_CLIENT_ID=your_naverpay_client_id
NAVERPAY_CLIENT_SECRET=your_naverpay_client_secret
NAVERPAY_MODE=development
NAVERPAY_BASE_URL=https://dev.apis.naver.com/naverpay-partner

# Payment Configuration - KakaoPay
KAKAOPAY_CID=your_kakaopay_cid
KAKAOPAY_SECRET_KEY=your_kakaopay_secret_key
KAKAOPAY_MODE=development
KAKAOPAY_BASE_URL=https://kapi.kakao.com

# POS Printer Configuration
POS_PRINTER_ENDPOINT=http://your-pos-printer-endpoint
POS_PRINT_TYPE=kitchen

# Authentication Configuration
JWT_SECRET=your-development-jwt-secret-key
COGNITO_USER_POOL_ID=your_cognito_user_pool_id

# Payment Base URL for redirects
PAYMENT_BASE_URL=https://your-frontend-domain.com

# API Configuration
API_BASE_URL=https://your-api-gateway-url

# Notification Configuration (optional)
SNS_TOPIC_ARN=arn:aws:sns:ap-northeast-2:123456789012:bell-notifications
SES_SENDER_EMAIL=noreply@yourrestaurant.com

# Development/Testing Configuration
NODE_ENV=development
LOG_LEVEL=debug